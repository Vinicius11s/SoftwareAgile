<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agile</title>
    <link rel="icon" type="image/png" href="~/logo/default_transparent_765x625.png" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />

    @* Espaço para CSS adicional de cada página *@
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100 text-light">
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-black shadow-sm">
            <div class="container">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-controller="Agile" asp-action="Index">
                    <img src="~/images/LogoComNome.png" alt="Logo" style="height:50px;">
                </a>

                <!-- Botão hamburguer -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    @{
                        var usuarioLogado = Context.Session.GetString("UsuarioLogado") == "true";
                        var nomeUsuario = Context.Session.GetString("NomeUsuario") ?? "Usuário";
                    }

                    @if (usuarioLogado)
                    {
                        <!-- Menu para usuário logado -->
                        <ul class="navbar-nav mx-auto gap-lg-4 text-center">
                            <li class="nav-item">
                                <a class="nav-link fw-semibold text-white" asp-controller="Cartaz" asp-action="Index">GERAR CARTAZES</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-semibold text-white" asp-controller="Cartaz" asp-action="UploadCsv">TRATAMENTO CSV</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-semibold text-white" href="https://wa.me/18996251546" >SUPORTE</a>
                            </li>
                        </ul>

                        <!-- Botões à direita para usuário logado -->
                        <ul class="navbar-nav ms-auto gap-2">
                            <li class="nav-item">
                                <span class="btn btn-outline navbar-text text-white fw-semibold">Olá, @nomeUsuario</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline fw-semibold px-3" asp-controller="Login" asp-action="Logout">LOGOUT</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <!-- Menu para usuário não logado -->
                        <ul class="navbar-nav mx-auto gap-lg-4 text-center">
                            <li class="nav-item">
                                <a class="nav-link fw-semibold text-white" asp-controller="Agile" asp-action="Index">HOME</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-semibold text-white" href="#quem-somos">QUEM SOMOS</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-semibold text-white" href="#soluções">SOLUÇÕES</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-semibold text-white" href="#planos">PLANOS</a>
                            </li> 
                        </ul>

                        <!-- Botões à direita para usuário não logado -->
                        <ul class="navbar-nav ms-auto gap-2">
                            <li class="nav-item">
                                <a class="btn btn-outline fw-semibold px-5" asp-controller="Login" asp-action="Index">LOGIN</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline fw-semibold px-3" href="https://wa.me/18996251546">SUPORTE</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Main -->
    <main role="main" class="py-5 flex-fill">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-black text-light py-4 mt-auto">
        <div class="container text-center small">
            © 2025 softwareAgile · Transformando dados em agilidade - dev Vinicius Santana
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
