<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Agile</title>
    <link rel="icon" type="image/x-icon" href="~/agile.ico" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/logo/favicon_32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="~/logo/favicon_transparent_32x32.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="~/logo/favicon_transparent_32x32.png" />
    <meta name="msapplication-TileColor" content="#000000" />
    <meta name="theme-color" content="#000000" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/responsive.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@400;500;600;700&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">

    @* Espaço para CSS adicional de cada página *@
    @RenderSection("Styles", required: false)
</head>
<body class="d-flex flex-column min-vh-100 text-light">
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark ai-navbar shadow-sm">
            <div class="container-fluid px-3">
                <!-- Logo -->             
                <!-- Botão hamburguer -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    @{
                        var usuarioLogado = Context.Session.GetString("UsuarioLogado") == "true";
                        var nomeUsuario = Context.Session.GetString("NomeUsuario") ?? "Usuário";
                    }

                    @if (usuarioLogado)
                    {
                        <a class="navbar-brand d-flex align-items-center" asp-controller="Cartazes" asp-action="EscolherTamanho">
                            <img src="~/images/LogoComNome.png" alt="Logo" style="height:50px;">
                        </a>
                        <!-- Menu para usuário logado -->
                        <ul class="navbar-nav mx-auto gap-lg-4 text-center">
                            <li class="nav-item">
                                <a class="nav-link fw-semibold text-white nav-link-border" asp-controller="Cartazes" asp-action="EscolherTamanho">
                                    GERAR CARTAZES
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-semibold text-white nav-link-border" asp-controller="Learning" asp-action="Index">
                                    APRENDIZADO
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link fw-semibold text-white nav-link-border" href="https://wa.me/18996251546" >
                                    SUPORTE
                                </a>
                            </li>
                        </ul>

                        <!-- Botões à direita para usuário logado -->
                        <ul class="navbar-nav ms-auto gap-2">
                            <li class="nav-item">
                                <span class="btn btn-outline navbar-text text-white fw-semibold">Olá, @nomeUsuario</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline fw-semibold px-3" asp-controller="Login" asp-action="Logout">LOGOUT</a>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <!-- Menu para usuário não logado -->
                        <a class="navbar-brand d-flex align-items-center" asp-controller="Agile" asp-action="Index">
                            <img src="~/images/LogoComNome.png" alt="Logo" style="height:50px;">
                        </a>
                        <ul class="navbar-nav mx-auto gap-lg-4 text-center">
                            <!--<li class="nav-item">
                                <a class="nav-link fw-semibold text-white" asp-controller="Agile" asp-action="Index">HOME</a>
                            </li>-->
                            <!--<li class="nav-item">
                                <a class="nav-link fw-semibold text-white" asp-controller="Cartazes" asp-action="Planos">PLANOS</a>
                            </li> -->
                        </ul>

                        <!-- Botões à direita para usuário não logado -->
                        <ul class="navbar-nav ms-auto gap-2">
                            <li class="nav-item">
                                <a class="btn btn-outline fw-semibold px-5" asp-controller="Login" asp-action="Index">LOGIN</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline fw-semibold px-3" href="https://wa.me/18996251546">SUPORTE</a>
                            </li>
                        </ul>
                    }
                </div>
            </div>
        </nav>
    </header>

    <!-- Main -->
    <main role="main" class="py-5 flex-fill">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-black text-light py-4 mt-auto">
        <div class="container text-center small">
            © 2025 softwareAgile · Transformando dados em agilidade - dev Vinicius Santana
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
