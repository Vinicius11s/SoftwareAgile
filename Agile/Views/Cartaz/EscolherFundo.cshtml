    @model List<(string Nome, string Imagem, string Id)>

    @{
        Layout = "_Layout";
        ViewData["Title"] = "Escolher Fundo - vAgile";
    }

    <div class="container py-5">
        <h2 class="text-center fw-bold text-primary mb-5">Escolha o Fundo do Cartaz</h2>
        <div class="row justify-content-center">
            @foreach (var fundo in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg border-0 rounded-4 hover-shadow" style="cursor:pointer;"
                         onclick="location.href='@Url.Action("UploadCsv", "Cartaz")?fundo=@fundo.Id'">
                        <img src="~/images/cartazMercearia.jpeg" class="card-img-top" alt="@fundo.Nome">
                        <div class="card-body text-center">
                            <h5 class="card-title fw-bold">@fundo.Nome</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <style>
        .hover-shadow:hover {
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.2);
            transform: translateY(-5px);
            transition: all 0.3s ease;
        }
    </style>

