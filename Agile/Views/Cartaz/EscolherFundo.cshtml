@{
    Layout = "_Layout";
    ViewData["Title"] = "Personalização";
}

@section Styles {
    <link rel="stylesheet" href="~/css/AgileIndex.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
}

    <div class="container py-5" style="background: radial-gradient( circle at top left, #111 0%, #000 60%); border-radius: 16px;">
        <h2 class="text-center fw-bold text-light mb-5">Escolha o Fundo do Cartaz</h2>
        <div class="row justify-content-center">
            @foreach (var fundo in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card bg-dark text-light shadow-lg border-0 rounded-4 hover-shadow" style="cursor:pointer;"
                         onclick="location.href='@Url.Action("UploadCsv", "Cartaz")?fundo=@fundo.Item3'">
                    <img src="@Url.Content(fundo.Item2)" class="card-img-top" alt="@fundo.Item1" style="border-top-left-radius:1rem;border-top-right-radius:1rem;">
                    <div class="card-body text-center">
                            <h5 class="card-title fw-bold text-white">@fundo.Item1</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>



