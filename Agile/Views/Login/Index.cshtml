@using Domain.DTOs
@model UsuarioDTO

@{
    Layout = "_Layout";
    ViewData["Title"] = "Agile - Login";
}

@section Styles {
    <link rel="stylesheet" href="~/css/AgileIndex.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/theme.css" asp-append-version="true" />
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            document.body.classList.add('body_login');
        });
    </script>
}

<section class="container pt-3 pb-5">
    <div class="row align-items-center justify-content-center" style="margin-top: -85px; padding-top: 100px;">
        <div class="col-12 col-md-6 col-lg-4">
            <article class="card card-dark text-white p-4 login-card">
                <header class="text-center mb-4">
                    <img src="~/logo/default_transparent_1000x1000.png"
                         alt="Logo Agile"
                         class="img-fluid"
                         style="max-width: 150px; height: auto;">
                    <h1 class="text-center mb-1">Login</h1>
                    <p class="text-center text-secondary-soft mb-4">Acesse sua conta para continuar</p>
                </header>
                
                <form action="@Url.Action("ValidarLogin", "Login")" method="post" role="form">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Login" class="form-label">Login</label>
                        <input type="text" asp-for="Login" class="form-control input-dark" placeholder="seu.login" required>
                        <span asp-validation-for="Login" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Senha" class="form-label">Senha</label>
                        <input type="password" asp-for="Senha" class="form-control input-dark" placeholder="••••••••" required>
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3 form-check d-flex justify-content-between">
                        <div>
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Lembrar-me</label>
                        </div>
                        <a href="#" class="link-muted">Esqueceu a senha?</a>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-accent">Entrar</button>
                    </div>
                </form>
            </article>
        </div>
    </div>
</section>